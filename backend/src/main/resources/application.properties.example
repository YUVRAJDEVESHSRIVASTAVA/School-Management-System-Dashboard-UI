# Copy this file to application.properties and fill in your real values
# application.properties is gitignored — never commit real credentials

# Port — Render sets $PORT automatically
server.port=${PORT:8080}

# ── SQLite Cloud DataSource ─────────────────────────────────
# Get your connection string from: https://sqlitecloud.io → your project → API Keys
# URL format: jdbc:sqlite:sqlitecloud://YOUR_HOST.sqlite.cloud:8860/YOUR_DB?apikey=YOUR_KEY
spring.datasource.url=${SPRING_DATASOURCE_URL:jdbc:sqlite:sqlitecloud://YOUR_HOST.sqlite.cloud:8860/YOUR_DB?apikey=YOUR_API_KEY}
spring.datasource.driver-class-name=org.sqlite.JDBC

# ── JPA / Hibernate ──────────────────────────────────────────
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.community.dialect.SQLiteDialect

# ── CORS ─────────────────────────────────────────────────────
spring.web.cors.allowed-origins=*
